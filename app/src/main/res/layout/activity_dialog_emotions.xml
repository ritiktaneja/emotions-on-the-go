<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.test.openfaceandroid.DialogEmotions">

    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <RadioGroup>


        <RadioButton
            android:id="@+id/swAngry"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Angry "
            android:drawableLeft="@mipmap/ic_emot_angry"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <RadioButton
            android:id="@+id/swDisgusted"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Disgusted "
            android:drawableLeft="@mipmap/ic_emot_disgust"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <RadioButton
            android:id="@+id/swFeared"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Feared "
            android:drawableLeft="@mipmap/ic_emot_fear"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <RadioButton
            android:id="@+id/swSad"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Sad "
            android:drawableLeft="@mipmap/ic_emot_sad"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <RadioButton
            android:id="@+id/swHappy"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Happy "
            android:drawableLeft="@mipmap/ic_emot_happy"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <RadioButton
            android:id="@+id/swNeutral"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Neutral "
            android:drawableLeft="@mipmap/ic_emot_neutral"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <RadioButton
            android:id="@+id/swSurprised"
            android:layout_row="2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:text="Surprised "
            android:drawableLeft="@mipmap/ic_emot_surprised"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RadioGroup>
        <Button
            android:id="@+id/btnSubmit"
            android:onClick="btnSubmit_onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"/>
    </GridLayout>


</LinearLayout>
